<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="filipe" id="1">
        <sql>
            CREATE SCHEMA tskswp
        </sql>
    </changeSet>
    <changeSet id="2" author="sebas">
        <createTable tableName="user" schemaName="tskswp">
            <column name="username" type="varchar(256)">
                <constraints primaryKey="true"/>
            </column>
            <column name="e-mail" type="varchar(256)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="sebas">
        <renameTable newTableName="account"
                     oldTableName="user"
                     schemaName="tskswp"/>
        <renameColumn schemaName="tskswp" tableName="account" oldColumnName="e-mail" newColumnName="email"/>
    </changeSet>
</databaseChangeLog> 