        <addNotNullConstraint tableName="equipment_status" columnName="percentage" schemaName="tskswp"/>
        <addNotNullConstraint tableName="equipment_status" columnName="instant" schemaName="tskswp"/>
        <addNotNullConstraint tableName="consumable_status" columnName="value" schemaName="tskswp"/>
        <addNotNullConstraint tableName="consumable_status" columnName="percentage" schemaName="tskswp"/>
        <addNotNullConstraint tableName="consumable_status" columnName="instant" schemaName="tskswp"/>
        <addForeignKeyConstraint baseTableName="equipment_status" baseColumnNames="equipment_name"
                                 constraintName="fk_equipment" referencedTableName="equipment"
                                 referencedColumnNames="name" baseTableSchemaName="tskswp"
                                 referencedTableSchemaName="tskswp"/>
        <addForeignKeyConstraint baseTableName="consumable_status" baseColumnNames="consumable_name"
                                 constraintName="fk_consumable" referencedTableName="consumable"
                                 referencedColumnNames="name" baseTableSchemaName="tskswp"
                                 referencedTableSchemaName="tskswp"/>
        <addNotNullConstraint tableName="counter" columnName="name" schemaName="tskswp"/>
        <addNotNullConstraint tableName="counter" columnName="objective" schemaName="tskswp"/>
        <addNotNullConstraint tableName="counter" columnName="value" schemaName="tskswp"/>
        <addNotNullConstraint tableName="counter" columnName="positive" schemaName="tskswp"/>
        <addNotNullConstraint tableName="task" columnName="name" schemaName="tskswp"/>
        <addNotNullConstraint tableName="task" columnName="start_date" schemaName="tskswp"/>
    </changeSet>
    <changeSet id="20" author="sebas">
        <addNotNullConstraint tableName="account" columnName="level" schemaName="tskswp"/>
